<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<link rel="stylesheet" href="/stylesheets/css/style.min.css" />
		<script type="text/javascript" src="/scripts/lib/lib.js"></script>
		<script type="text/javascript" src="/scripts/pages-min/common.js"></script>
		<script type="text/javascript" src="/scripts/pages-min/<%= script %>"></script>
	</head>
	<body class="index">

		<div class="title">
			Tic Tac Toe
		</div>

		<div class="login-panel">

			<ul class="nav nav-tabs">
				<li class="active">
					<a href="#login" data-toggle="tab">Login</a>
				</li>
				<li>
					<a href="#signup" data-toggle="tab">Sign up</a>
				</li>
			</ul>

			<div class="tab-content">
				<div class="tab-pane active" id="login">

					<form id="login-form">
						<div class="form-group">
							<label class="label">Username</label>
							<input type="text" class="form-control" placeholder="Username"/>
						</div>

						<div class="form-group">
							<label class="label">Password</label>
							<input type="password" class="form-control" placeholder="Password"/>
						</div>

						<button class="btn btn-success">
							Login
						</button>
					</form>

				</div>
				<div class="tab-pane" id="signup">

					<form id="signup-form">
						<div class="form-group">
							<label class="label">Username</label>
							<input type="text" class="form-control" placeholder="Username"/>
						</div>

						<div class="form-group">
							<label class="label">Password</label>
							<input type="password" class="form-control" placeholder="Password"/>
						</div>

						<div class="form-group">
							<label class="label">Repeat Password</label>
							<input type="password" class="form-control" placeholder="Repeat Password"/>
						</div>

						<button class="btn btn-success">
							Sign up
						</button>
					</form>

				</div>
			</div>
		</div>

	</body>
</html>
