<!DOCTYPE html>
<html>
	<head>
		<title>Tic Tac Toe</title>
		<% include partials/stylesheets.ejs %>
		<% include partials/scripts.ejs %>
	</head>
	<body class="index">

		<div class="title">
			Tic Tac Toe
		</div>

		<div class="login-panel">

			<ul class="nav nav-tabs">
				<li class="active">
					<a href="#login" data-toggle="tab">Login</a>
				</li>
				<li>
					<a href="#signup" data-toggle="tab">Sign up</a>
				</li>
			</ul>

			<div class="tab-content">
				<div class="tab-pane active" id="login">

					<form id="login-form">
						<div class="form-group">
							<label class="label">Username</label>
							<input type="text" class="form-control" name="username" placeholder="Username"/>
						</div>

						<div class="form-group">
							<label class="label">Password</label>
							<input type="password" class="form-control" name="password" placeholder="Password"/>
						</div>

						<button type="button" class="btn btn-success">
							Login
						</button>
					</form>

				</div>
				<div class="tab-pane" id="signup">

					<form id="signup-form" enctype="multipart/form-data">
						<div class="form-group">
							<label class="label">Username</label>
							<input type="text" class="form-control" name="username" placeholder="Username"/>
						</div>

						<div class="form-group">
							<label class="label">Password</label>
							<input type="password" class="form-control" name="password" placeholder="Password"/>
						</div>

						<div class="form-group">
							<label class="label">Repeat Password</label>
							<input type="password" class="form-control" name="repeatPassword" placeholder="Repeat Password"/>
						</div>

						<div class="form-group">
							<label class="label">Avatar (optional)</label>
							
							<div class="avatar-wrapper">
								<button type="button" class="btn btn-primary browse-btn">
									<span class="glyphicon glyphicon-open" aria-hidden="true"></span>
									Choose a file
								</button>

								<img class="avatar-preview"/>

								<input type="file" class="avatar" name="avatar" />
							</div>
							
						</div>

						<button type="button" class="btn btn-success signup-btn">
							Sign up
						</button>
					</form>

				</div>
			</div>
		</div>

	</body>
</html>
