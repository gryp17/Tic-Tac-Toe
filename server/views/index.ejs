<!DOCTYPE html>
<html>
	<head>
		<title>Tic Tac Toe</title>
		<% include partials/scripts.ejs %>
	</head>
	<body class="index" data-controllers="Index Tabs">

		<div class="container">
			
			<div class="title">
				Tic Tac Toe
			</div>

			<div class="login-panel">

				<!-- tab buttons -->
				<div class="row no-pad">
					<div class="tab-button col-xs-6 active" data-target="login">
						Login
					</div>
					<div class="tab-button col-xs-6" data-target="signup">
						Sign up	
					</div>
				</div>

				<div class="row no-pad">

					<!-- login content -->
					<div id="login" class="tab-content active">
						<form id="login-form">
							<div class="form-group">
								<label class="label">Username</label>
								<input type="text" class="form-control" name="username" placeholder="Username"/>
							</div>

							<div class="form-group">
								<label class="label">Password</label>
								<input type="password" class="form-control" name="password" placeholder="Password"/>
							</div>

							<button type="button" class="btn btn-success">
								Login
							</button>
						</form>
					</div>

					<!-- signup content -->
					<div id="signup" class="tab-content">
						<form id="signup-form" enctype="multipart/form-data">
							<div class="form-group">
								<label class="label">Username</label>
								<input type="text" class="form-control" name="username" placeholder="Username"/>
							</div>

							<div class="form-group">
								<label class="label">Password</label>
								<input type="password" class="form-control" name="password" placeholder="Password"/>
							</div>

							<div class="form-group">
								<label class="label">Repeat Password</label>
								<input type="password" class="form-control" name="repeatPassword" placeholder="Repeat Password"/>
							</div>

							<div class="form-group">
								<label class="label">Avatar (optional)</label>

								<div class="avatar-wrapper">
									<button type="button" class="btn btn-primary browse-btn">
										<span class="glyphicon glyphicon-open" aria-hidden="true"></span>
										Choose a file
									</button>

									<img class="avatar-preview"/>

									<input type="file" class="avatar" name="avatar" />
								</div>

							</div>

							<button type="button" class="btn btn-success signup-btn">
								Sign up
							</button>
						</form>
					</div>

				</div>
			</div>
		</div>

	</body>
</html>
